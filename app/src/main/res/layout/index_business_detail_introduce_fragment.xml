<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:paddingBottom="@dimen/view_padding"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/view_margin"
        android:paddingLeft="@dimen/view_padding"
        android:paddingRight="@dimen/view_padding"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营业时段："
            style="@style/text_black_28"
            android:id="@+id/textView"
            />

        <TextView
            android:id="@+id/index_business_detail_introduce_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_black_28"
            android:layout_marginLeft="@dimen/drawable_padding"
            />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/view_margin"
        android:paddingLeft="@dimen/view_padding"
        android:paddingRight="@dimen/view_padding"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他服务："
            style="@style/text_black_28"
            />
        <TextView
            android:id="@+id/index_business_detail_introduce_other_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_black_28"
            android:layout_marginLeft="@dimen/drawable_padding"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/view_margin"
        android:paddingLeft="@dimen/view_padding"
        android:paddingRight="@dimen/view_padding"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺简介："
            style="@style/text_black_28"
            />
        <TextView
            android:id="@+id/index_business_detail_introduce_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_black_28"
            android:layout_marginLeft="@dimen/drawable_padding"
            />

    </LinearLayout>
    

</LinearLayout>