<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/index_select_city_item_layout_header"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/index_select_city_item_tv_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/view_padding"
            android:text="A"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_28"
            android:textColor="@color/text_red"/>

        <include layout="@layout/common_split_line_long" />

    </LinearLayout>

    <TextView
        android:id="@+id/index_select_city_item_tv_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:paddingLeft="@dimen/view_padding"
        android:text="城市"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_28"
        android:textColor="@color/text_black"
        android:background="@color/bg_white"/>

    <include layout="@layout/common_split_line_short" />

</LinearLayout>