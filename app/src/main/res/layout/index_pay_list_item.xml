    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/index_pay_list_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_weight="1"
            style="@style/text_black_28"
            android:layout_marginLeft="@dimen/view_margin"
            android:drawablePadding="@dimen/view_padding"
            android:focusable="false"
            />

        <TextView
            android:id="@+id/index_pay_list_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_24"
            android:textColor="@color/text_gray"
            android:layout_marginLeft="@dimen/view_margin"
            android:drawablePadding="@dimen/view_padding"
            android:drawableRight="@drawable/rebate_public_next"
            android:layout_marginRight="@dimen/view_margin"
            android:focusable="false"
            />

    </LinearLayout>

    <include layout="@layout/common_split_line_long"/>
</LinearLayout>