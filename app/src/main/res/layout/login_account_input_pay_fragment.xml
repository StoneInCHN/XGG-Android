<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_margin"
        android:layout_marginLeft="@dimen/view_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/view_margin_double"
            android:gravity="left"
            android:paddingBottom="@dimen/view_padding"
            android:paddingTop="@dimen/view_padding"
            android:text="手\u2000机\u2000号"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_28" />

        <EditText
            android:id="@+id/account_edt_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="手机号"
            android:maxLength="11"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/text_gray"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/text_24" />

        <Button
            android:id="@+id/account_btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rebate_selector_public_botton_send"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="发送"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_28" />

    </LinearLayout>

    <include layout="@layout/common_split_line_long" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_margin"
        android:layout_marginLeft="@dimen/view_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/view_margin_double"
            android:gravity="left"
            android:paddingBottom="@dimen/view_padding"
            android:paddingTop="@dimen/view_padding"
            android:text="验\u2000证\u2000码"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_28" />

        <EditText
            android:id="@+id/account_edt_sms"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="验证码"
            android:maxLength="11"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/text_gray"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/text_24" />

    </LinearLayout>

    <include layout="@layout/common_split_line_long" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_margin"
        android:layout_marginLeft="@dimen/view_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/view_margin_double"
            android:gravity="left"
            android:paddingBottom="@dimen/view_padding"
            android:paddingTop="@dimen/view_padding"
            android:text="密\u3000\u3000码"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_28" />

        <com.hentica.app.widget.view.PasswordEditText
            android:id="@+id/account_edt_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:hint="密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/text_gray"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/text_24" />

    </LinearLayout>

    <include layout="@layout/common_split_line_long" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_margin"
        android:layout_marginLeft="@dimen/view_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/view_margin_double"
            android:gravity="left"
            android:paddingBottom="@dimen/view_padding"
            android:paddingTop="@dimen/view_padding"
            android:text="确认密码"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_28" />

        <com.hentica.app.widget.view.PasswordEditText
            android:id="@+id/account_edt_cpwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:hint="确认密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/text_gray"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/text_24" />

    </LinearLayout>

    <include layout="@layout/common_split_line_long" />

</LinearLayout>