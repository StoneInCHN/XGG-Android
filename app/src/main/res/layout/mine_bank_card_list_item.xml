<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_margin"
        android:background="@color/transparent"
        android:id="@+id/divider_top"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="@drawable/rebate_mine_bank2">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_padding"
            android:src="@drawable/rebate_mine_bank_card"
            android:layout_marginRight="@dimen/view_margin"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXX"
            android:layout_toRightOf="@id/img_logo"
            android:layout_marginTop="@dimen/view_margin_less"
            android:textSize="@dimen/text_28"
            android:textColor="@color/text_black"
            />

        <TextView
            android:id="@+id/tv_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_logo"
            android:layout_centerVertical="true"
            android:text="XXXX XXXX XXXX XXXX XXX"
            android:textSize="@dimen/text_28"
            android:textColor="@color/text_black"
            />

        <CheckBox
            android:id="@+id/tv_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认提现卡"
            android:layout_toRightOf="@id/img_logo"
            android:layout_alignParentBottom="true"
            android:button="@null"
            android:drawableLeft="@drawable/rebate_selector_mine_choose"
            android:drawablePadding="@dimen/drawable_padding"
            android:layout_marginBottom="@dimen/view_margin_less"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_28"
            />

        <TextView
            android:id="@+id/tv_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="XXXX"
            android:layout_marginTop="@dimen/view_margin_less"
            android:layout_marginRight="@dimen/view_margin"
            android:textSize="@dimen/text_28"
            android:textColor="@color/text_black"/>

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:layout_marginRight="@dimen/view_margin"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/view_margin_less"
            android:textSize="@dimen/text_28"
            android:textColor="@color/text_red"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_margin"
        android:background="@color/transparent"/>

</LinearLayout>