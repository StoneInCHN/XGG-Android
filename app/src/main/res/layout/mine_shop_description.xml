<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/view_padding"
    android:background="@color/bg_white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_margin"
        android:text="店铺简介（选填）"
        android:textColor="@color/text_black" />

    <EditText
        android:id="@+id/shop_description_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bd_1px_gray"
        android:maxLength="500"
        android:minLines="4"
        android:gravity="top"
        android:padding="@dimen/view_padding_less"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_24"/>

    <TextView
        android:id="@+id/shop_description_tv_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/view_margin_less"
        android:text="0/500" />

</LinearLayout>