<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_gray" >

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/dialog_select_llayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >


        <!-- 分割线 -->
        <include layout="@layout/common_split_line_long"/>

        <!-- 拍照 -->

        <Button
            android:id="@+id/dialog_photo_take_photo_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_height"
            android:text="拍照"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_28"
            android:background="@color/bg_white"/>

        <!-- 分割线 -->
        <include layout="@layout/common_split_line_long"/>
        <!-- "从相册选择" -->

        <Button
            android:id="@+id/dialog_photo_select_from_album_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_height"
            android:text="从相册选择"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_28"
            android:background="@color/bg_white"/>

        <!-- 分割线 -->
        <include layout="@layout/common_split_line_long"/>
        <!-- 取消 -->

        <Button
            android:id="@+id/dialog_photo_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_height"
            android:text="取消"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_28"
            android:background="@color/bg_white"/>
    </LinearLayout>

</RelativeLayout>