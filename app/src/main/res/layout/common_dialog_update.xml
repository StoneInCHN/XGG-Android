<?xml version="1.0" encoding="utf-8"?><!-- 警告框 -->
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="325dp"
    android:layout_height="216dp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/shape_bg_white_rad_15dp"
    android:visibility="visible">


    <ImageView
        android:id="@+id/common_dialog_update_close"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/view_margin"
        android:src="@drawable/rebate_public_remind_close"
        android:paddingBottom="2dp"/>

    <TextView
        android:id="@+id/dialog_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/view_margin_double"
        android:gravity="center_vertical"
        android:text="更新"
        android:textColor="@color/text_red"
        android:textSize="@dimen/text_38" />

    <include
        layout="@layout/common_split_line_long"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@id/dialog_tv_title" />


    <!-- 进度条 -->
    <ProgressBar
        android:id="@+id/common_dialog_update_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="120dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/common_dialog_update_progress_drawable" />

    <!-- 进度 -->
    <TextView
        android:id="@+id/common_dialog_update_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/common_dialog_update_progress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="20%"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_28" />

</RelativeLayout>
    </RelativeLayout>